{%- comment -%}
  Parameters:
  - share_title {String} - Title of the shared page.
  - share_url {String} - Permalink of the shared page.
  - share_image {Object} - Image for the shared page (optional).
  - share_twitter {Boolean} - Show Twitter icon/link (optional, default is true).
  - share_facebook {Boolean} - Show Facebook icon/link (optional, default is true).
  - share_pinterest {Boolean} - Show Pinterest icon/link (optional, default is true).

  Usage:
  {% render 'social-share',
    share_title: article.title,
    share_url: article.url,
    share_image: article.image,
    share_facebook: false
  %}
{%- endcomment -%}

{%- assign full_url = shop.url | append: share_url -%}
<ul class="social_share">
  {%- unless share_facebook == false -%}
    <li><a href="https://www.facebook.com/sharer.php?u={{ full_url }}" target="_blank" rel="noopener">{{- 'icon-social-facebook.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}

  {%- unless share_twitter == false -%}
    <li><a href="https://twitter.com/intent/tweet?text={{ share_title | url_param_escape }}&url={{ full_url }}" target="_blank" rel="noopener">{{- 'icon-social-twitter.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}

  {%- unless share_pinterest == false or share_image == blank -%}
    <li><a href="https://pinterest.com/pin/create/button/?url={{ full_url }}&media={{ share_image | image_url: width: 1000 }}&description={{ share_title | url_param_escape }}" target="_blank" rel="noopener">{{- 'icon-social-pinterest.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}

  {%- unless share_linkedin == false -%}
    <li><a href="https://www.linkedin.com/shareArticle?mini=true&url={{ full_url }}&title={{ share_title | url_param_escape }}" target="_blank" rel="noopener">{{- 'icon-social-linkedin.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}

  {%- unless share_whatsapp == false -%}
    <li><a href="https://api.whatsapp.com/send?text={{ share_title | url_param_escape }}%20{{ full_url }}" target="_blank" rel="noopener">{{- 'icon-social-whatsapp.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}

  {%- unless share_telegram == false -%}
    <li><a href="https://t.me/share/url?url={{ full_url }}&text={{ share_title | url_param_escape }}" target="_blank" rel="noopener">{{- 'icon-social-telegram.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}

  {%- unless share_reddit == false -%}
    <li><a href="https://www.reddit.com/submit?url={{ full_url }}&title={{ share_title | url_param_escape }}" target="_blank" rel="noopener">{{- 'icon-social-reddit.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}

  {%- unless share_email == false -%}
    <li><a href="mailto:?subject={{ share_title | url_param_escape }}&body={{ full_url }}" target="_blank" rel="noopener">{{- 'icon-social-mail.svg' | inline_asset_content -}}</a></li>
  {%- endunless -%}
</ul>

  