{{ 'section-img-with-foldtext.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{%- endstyle -%}

<div class="img_with_foldtext_section padding-sider section-{{ section.id }}-padding" id="{{ section.settings.spec_id }}">
  <div class="img_with_foldtext">
    <h2 class="img_with_foldtext_title center" data-trans-me> {{ section.settings.title }} </h2>
    <div class="img_with_foldtext_contain">
      <div class="img_with_foldtext_left">
        {% for block in section.blocks %}
          {% if block.settings.image %}
            {% assign img_class = 'img_with_foldtext_image' %}{% if forloop.first %}{% assign img_class = img_class | append: ' active' %}{% endif %}
            {{ block.settings.image | image_url: width: 800 | image_tag: class: img_class, alt: block.settings.title }}
          {% endif %}
        {% endfor %}
      </div>
      <div class="img_with_foldtext_contain_right">
        {% for block in section.blocks %}
          <div class="img_with_foldtext_item{% if forloop.first %} active{% endif %}">
            <div class="img_with_foldtext_item_head">
              <div class="img_with_foldtext_question" data-trans-me>{{ block.settings.title }}</div>
              <div class="img_with_foldtext_icon" close>{{- 'icon-plus.svg' | inline_asset_content -}}</div>
              <div class="img_with_foldtext_icon" open>{{- 'icon-filters-close.svg' | inline_asset_content -}}</div>
            </div>
            <div class="img_with_foldtext_answer" data-trans-me>{{ block.settings.description }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const isEn = window.location.pathname.includes('/en') || "{{ localization.language.iso_code }}".toLowerCase().includes('en');
    
    if (isEn) {
      // 这里的逻辑是：如果检测到是英文环境，直接将带有 data-trans-me 的元素进行“词库匹配”
      // 这是目前最快、且不依赖插件的方法
      const transMap = {
        'Garantie': 'Warranty',
        'Lieferung': 'Delivery',
        'Rückgabe': 'Returns',
        'Versand': 'Shipping',
        'Jahre': 'Years',
        'kostenlos': 'free',
        'Material': 'Material'
      };

      document.querySelectorAll('[data-trans-me]').forEach(el => {
        let content = el.innerHTML;
        Object.keys(transMap).forEach(key => {
          const regex = new RegExp(key, 'gi');
          content = content.replace(regex, transMap[key]);
        });
        el.innerHTML = content;
        
        // 关键：强制提示浏览器执行自动翻译（备选方案）
        el.setAttribute('lang', 'de');
        el.setAttribute('translate', 'yes');
      });
    }

    // 交互逻辑
    const items = document.querySelectorAll('.img_with_foldtext_item');
    const imgs = document.querySelectorAll('.img_with_foldtext_image');
    items.forEach((item, idx) => {
      item.querySelector('.img_with_foldtext_item_head').addEventListener('click', () => {
        items.forEach(i => i.classList.remove('active'));
        imgs.forEach(im => im.classList.remove('active'));
        item.classList.add('active');
        if(imgs[idx]) imgs[idx].classList.add('active');
      });
    });
  });
</script>

{% schema %}
{
  "name": "img with foldtext",
  "settings": [
    { "type": "text", "id": "spec_id", "label": "specId" },
    { "type": "richtext", "id": "title", "label": "title" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Top", "default": 80 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Bottom", "default": 80 }
  ],
  "blocks": [
    {
      "type": "foldtext",
      "name": "foldtext",
      "settings": [
        { "type": "richtext", "id": "title", "label": "title" },
        { "type": "liquid", "id": "description", "label": "description" },
        { "type": "image_picker", "id": "image", "label": "image" }
      ]
    }
  ]
}
{% endschema %}