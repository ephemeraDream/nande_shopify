{{ 'section-img-with-foldtext.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{%- endstyle -%}

<div class="img_with_foldtext_section padding-sider section-{{ section.id }}-padding" id="{{ section.settings.spec_id }}">
  <div class="img_with_foldtext">
    <h2 class="img_with_foldtext_title center" data-auto-translate>{{ section.settings.title }}</h2>
    <div class="img_with_foldtext_contain">
      <div class="img_with_foldtext_left">
        {% for block in section.blocks %}
          {% if block.settings.image %}
            {% assign img_class = 'img_with_foldtext_image' %}{% if forloop.first %}{% assign img_class = img_class | append: ' active' %}{% endif %}
            {{ block.settings.image | image_url: width: 800 | image_tag: class: img_class, alt: block.settings.title }}
          {% endif %}
        {% endfor %}
      </div>
      <div class="img_with_foldtext_contain_right">
        {% for block in section.blocks %}
          <div class="img_with_foldtext_item{% if forloop.first %} active{% endif %}">
            <div class="img_with_foldtext_item_head">
              <div class="img_with_foldtext_question" data-auto-translate>{{ block.settings.title }}</div>
              <div class="img_with_foldtext_icon" close>{{- 'icon-plus.svg' | inline_asset_content -}}</div>
              <div class="img_with_foldtext_icon" open>{{- 'icon-filters-close.svg' | inline_asset_content -}}</div>
            </div>
            <div class="img_with_foldtext_answer" data-auto-translate>{{ block.settings.description }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const isEnglish = window.location.pathname.includes('/en') || "{{ localization.language.iso_code }}".includes('en');
    
    // 自动翻译函数
    if (isEnglish) {
      const translateElements = document.querySelectorAll('[data-auto-translate]');
      translateElements.forEach(el => {
        const text = el.innerText;
        // 使用免费翻译接口代理或提示浏览器翻译
        el.setAttribute('lang', 'de');
        el.classList.add('notranslate'); // 防止重复翻译
        // 如果想要强制静默翻译，可以在此调用 API
      });
    }

    // 基础切换逻辑
    const faqItems = document.querySelectorAll('.img_with_foldtext_item');
    const images = document.querySelectorAll('.img_with_foldtext_image');
    faqItems.forEach((item, index) => {
      item.querySelector('.img_with_foldtext_item_head').addEventListener('click', () => {
        faqItems.forEach(i => i.classList.remove('active'));
        images.forEach(img => img.classList.remove('active'));
        item.classList.add('active');
        if (images[index]) images[index].classList.add('active');
      });
    });
  });
</script>

{% schema %}
{
  "name": "img with foldtext",
  "settings": [
    { "type": "text", "id": "spec_id", "label": "specId" },
    { "type": "richtext", "id": "title", "label": "title" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Top", "default": 120 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 120, "step": 4, "unit": "px", "label": "Bottom", "default": 120 }
  ],
  "blocks": [
    {
      "type": "foldtext",
      "name": "foldtext",
      "settings": [
        { "type": "richtext", "id": "title", "label": "title" },
        { "type": "liquid", "id": "description", "label": "description" },
        { "type": "image_picker", "id": "image", "label": "image" }
      ]
    }
  ]
}
{% endschema %}