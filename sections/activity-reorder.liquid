{{ 'section-activity-reorder.css' | asset_url | stylesheet_tag }}

<style>
  /* 缩减整体模块高度的样式 */

  .activity_reorder_section {
    padding-top: 20px !important;
    padding-bottom: 20px !important;
  }

  .activity_reorder {
    max-width: 1200px;
    margin: 0 auto;
  }

  .activity_reorder_title {
    margin-bottom: 10px !important;
    font-size: 1.8rem !important;
    line-height: 1.2 !important;
  }

  .activity_reorder_text {
    margin-bottom: 15px !important;
    max-height: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .activity_reorder_contain {
    display: flex;
    align-items: flex-start;
    gap: 15px;
  }

  .activity_reorder_contain_left {
    flex: 1 1 60%;
  }

  .activity_reorder_contain_left_title {
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .activity_reorder_contain_left_title_num {
    font-weight: 700;
    color: #D14524; /* 示例强调色 */
  }

  .activity_reorder_contain_left_text {
    max-height: 100px;
    overflow: hidden;
    margin-bottom: 15px;
    line-height: 1.4;
  }

  .activity_reorder_contain_left_btnline {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }

  .activity_reorder_contain_left_btn {
    background-color: #f2f2f2;
    padding: 6px 14px;
    font-size: 0.9rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    border-radius: 4px;
  }

  .activity_reorder_contain_left_btn svg {
    margin-left: 6px;
    width: 14px;
    height: 14px;
  }

  .activity_reorder_contain_left_btntwo {
    background-color: #D14524;
    color: #fff;
    padding: 8px 20px;
    font-size: 1rem;
    text-decoration: none;
    border-radius: 4px;
    display: inline-block;
  }

  /* 限制右侧图片最大高度，防止撑高 */
  .activity_reorder_contain_img {
    max-height: 250px;
    width: auto;
    object-fit: contain;
    flex-shrink: 0;
  }

  /* 弹窗样式 - 保持原样 */
  .common_modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0; top: 0; right: 0; bottom: 0;
    background-color: rgba(0,0,0,0.5);
    overflow: auto;
  }
  .common_modal_contain {
    background: #fff;
    max-width: 600px;
    margin: 80px auto;
    border-radius: 6px;
    padding: 20px;
    position: relative;
  }
  .common_modal_head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 700;
    font-size: 1.2rem;
    margin-bottom: 12px;
  }
  .common_modal_close {
    cursor: pointer;
    width: 24px;
    height: 24px;
  }
  .common_modal_close svg {
    width: 100%;
    height: 100%;
  }
  .common_modal_body {
    max-height: 400px;
    overflow-y: auto;
    line-height: 1.5;
  }
</style>

<div class="activity_reorder_section padding-sider" id="{{ section.settings.specId }}">
  <div class="activity_reorder">
    <h2 class="activity_reorder_title">{{ section.settings.title }}</h2>
    <div class="activity_reorder_text">{{ section.settings.text }}</div>

    <div class="activity_reorder_contain">
      <div class="activity_reorder_contain_left">

        <!-- 活动核心规则标题（自动折扣语义） -->
        <div class="activity_reorder_contain_left_title">
          Kaufen Sie mindestens
          <span class="activity_reorder_contain_left_title_num">{{ section.settings.quota }}</span>
          Produkte –
          <span class="activity_reorder_contain_left_title_num">{{ section.settings.reorder_proportion }}</span>
          Rabatt automatisch
        </div>

        <div class="activity_reorder_contain_left_text">
          {{ section.settings.explanation }}
        </div>

        <div class="activity_reorder_contain_left_btnline">

          <!-- 规则按钮（弹窗触发） -->
          <div class="activity_reorder_contain_left_btn rule-trigger">
            Angebotsregeln
            {{ 'icon-right-arrow.svg' | inline_asset_content }}
          </div>

          <!-- 规则弹窗 -->
          <div class="common_modal">
            <div class="common_modal_contain">
              <div class="common_modal_head">
                <span>Angebotsregeln</span>
                <div class="common_modal_close">
                  {{- 'icon-close.svg' | inline_asset_content -}}
                </div>
              </div>
              <div class="common_modal_body">
                {{ section.settings.rule }}
              </div>
            </div>
          </div>

          <!-- 主CTA按钮（跳转选购） -->
          {% if section.settings.btn_two != blank %}
            <a 
              class="activity_reorder_contain_left_btntwo"
              href="{{ section.settings.btn_two_link }}"
            >
              {{ section.settings.btn_two }}
            </a>
          {% endif %}

        </div>
      </div>

      {% if section.settings.right_img != blank %}
        <img 
          src="{{ section.settings.right_img | image_url }}" 
          class="activity_reorder_contain_img"
          loading="lazy"
          alt="Promotion image"
        >
      {% endif %}

    </div>
  </div>
</div>

<script>
(() => {

  /* 弹窗逻辑 */
  const ruleBtns = document.querySelectorAll('.activity_reorder_section .rule-trigger');

  ruleBtns.forEach(rule_btn => {
    rule_btn.addEventListener('click', () => {
      const parent = rule_btn.closest('.activity_reorder_contain_left_btnline');
      const modal = parent.querySelector('.common_modal');
      if (!modal) return;

      const originalParent = modal.parentElement;
      const nextSibling = modal.nextElementSibling;

      document.body.appendChild(modal);
      modal.style.display = 'block';
      document.body.style.overflow = 'hidden';

      const closeModal = () => {
        modal.style.display = 'none';
        document.body.style.overflow = '';

        if (nextSibling) {
          originalParent.insertBefore(modal, nextSibling);
        } else {
          originalParent.appendChild(modal);
        }
      };

      const closeBtn = modal.querySelector('.common_modal_close');
      if (closeBtn) {
        closeBtn.onclick = closeModal;
      }

      modal.onclick = (e) => {
        if (e.target === modal) closeModal();
      };

    });
  });

})();
</script>

{% schema %}
