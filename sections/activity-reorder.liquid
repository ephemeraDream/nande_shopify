  "name": "Auto Discount Promo",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [

    {
      "type": "text",
      "id": "specId",
      "label": "Section anchor ID"
    },

    {
      "type": "richtext",
      "id": "title",
      "label": "Main title"
    },

    {
      "type": "richtext",
      "id": "text",
      "label": "Intro text"
    },

    {
      "type": "text",
      "id": "quota",
      "label": "Minimum quantity (e.g. 2)"
    },

    {
      "type": "text",
      "id": "reorder_proportion",
      "label": "Discount (e.g. 15%)"
    },

    {
      "type": "richtext",
      "id": "explanation",
      "label": "Explanation text"
    },

    {
      "type": "image_picker",
      "id": "right_img",
      "label": "Right image"
    },

    {
      "type": "richtext",
      "id": "rule",
      "label": "Rules (modal content)"
    },

    {
      "type": "text",
      "id": "btn_two",
      "label": "CTA button text"
    },

    {
      "type": "url",
      "id": "btn_two_link",
      "label": "CTA button link"
    }

  ],
  "presets": [
    {
      "name": "Auto Discount Promo"
    }
  ]
}
{% endschema %}
