<div class="accordion-gallery session-box-padding">
    {% unless section.settings.title == blank %}
        <h2 class="padding-bottom-60 session-box-inner">{{ section.settings.title }}</h2>
    {% endunless %}
    <div class="session-box-inner">
        {%- for block in section.blocks -%}
            <div class="accordion-item">
                <div class="accordion-item__img">
                    {{-
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag: alt: block.settings.title, class: 'accordion-item__img'
                    -}}
                </div>
                <div class="accordion-item__content">
                    <h3 class="accordion-item__title">{{ block.settings.title }}</h3>
                    <div class="accordion-item__desc">{{ block.settings.content }}</div>
                </div>
            </div>
        {%- endfor -%}
    </div>
</div>

<style>
.accordion-gallery{
    margin:120px 0;
}
</style>

{% schema %}
{
  "name": "Accordion Gallery",
  "tag": "section",
  "class": "section",
  "disabled_on": { "groups": ["header", "footer"] },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    { "name": "Accordion Gallery" }
  ]
}
{% endschema %}