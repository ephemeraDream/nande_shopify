{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'section-banner.css' | asset_url | stylesheet_tag }}

<div class="section_banner swiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        {% if block.settings.file_type == 'image' %}
          {{-
            block.settings.file_image
            | image_url: width: block.settings.file_image.width
            | image_tag: alt: block.settings.file_image.alt
          -}}
        {% else %}
          {% assign poster_image = blank %}
          {% if block.settings.cover_image != blank %}
            {% assign poster_image = block.settings.cover_image | image_url: block.settings.cover_image.width %}
          {% endif %}
          {% if block.settings.video_url != blank %}
            <video
              autoplay
              loop
              muted
              playsinline
              preload="auto"
              {% if poster_image != blank %}
                poster="{{ poster_image }}"
              {% endif %}
              src="{{ block.settings.video_url }}"
            ></video>
          {% else %}
            {{
              block.settings.url_upload
              | video_tag:
                autoplay: true,
                loop: true,
                muted: true,
                playsinline: true,
                preload: 'auto',
                poster: poster_image
            }}
          {% endif %}
        {% endif %}
        <div class="section_banner_info">
          <div class="section_banner_info_title">{{ block.settings.title }}</div>
          <div class="section_banner_info_text">{{ block.settings.text }}</div>
          <div class="section_banner_info_btn">
            {{ block.settings.btn_text }}
            {{ 'icon-right-arrow.svg' | inline_asset_content }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
<script>
  new Swiper('.section_banner', {
    loop: true,
    spaceBetween: 0,
  });
</script>

{% schema %}
{
  "name": "banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "banner_item",
      "name": "swiper",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "text"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "button text"
        },
        {
          "type": "select",
          "id": "file_position",
          "label": "file position",
          "options": [
            {
              "value": "top_left",
              "label": "top left"
            },
            {
              "value": "top_center",
              "label": "top center"
            },
            {
              "value": "top_right",
              "label": "top right"
            },
            {
              "value": "middle_left",
              "label": "middle left"
            },
            {
              "value": "middle_center",
              "label": "middle center"
            },
            {
              "value": "middle_right",
              "label": "middle right"
            },
            {
              "value": "bottom_left",
              "label": "bottom left"
            },
            {
              "value": "bottom_center",
              "label": "bottom center"
            },
            {
              "value": "bottom_right",
              "label": "bottom right"
            }
          ],
          "default": "middle_left"
        },
        {
          "type": "radio",
          "id": "file_type",
          "label": "file type",
          "default": "image",
          "options": [
            {
              "value": "image",
              "label": "image"
            },
            {
              "value": "video",
              "label": "video"
            }
          ]
        },
        {
          "type": "image_picker",
          "id": "file_image",
          "label": "file image"
        },
        {
          "type": "image_picker",
          "id": "cover_image",
          "label": "video cover image"
        },
        {
          "type": "text",
          "id": "video_url",
          "label": "video url"
        },
        {
          "type": "video",
          "id": "url_upload",
          "label": "video upload"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "banner",
      "blocks": [
        {
          "type": "banner_item"
        }
      ]
    }
  ]
}
{% endschema %}
