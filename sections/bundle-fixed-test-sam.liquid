{% comment %}
  Bundle Collaboration Section - Final Polished Version
  - Layout: Left Hero (50:63) and Right Products aligned horizontally
  - Features: Checkbox logic, Tiered Discount, Terms Modal
{% endcomment %}

<section id="bundle-{{ section.id }}" class="bundle-collab" data-section-id="{{ section.id }}">
  <div class="bundle-container">
    {% comment %} Top Header Section {% endcomment %}
    <div class="bundle-header">
      <div class="bundle-header-left">
        <h1 class="bundle-main-title">{{ section.settings.kicker }}</h1>
        <p class="bundle-main-desc">{{ section.settings.subheading }}</p>
      </div>
      <div class="bundle-header-right">
        <button type="button" class="bundle-terms-trigger" data-terms-open>Terms</button>
      </div>
    </div>

    <div class="bundle-main-content">
      {% comment %} Left Hero Image - Height aligned with right side {% endcomment %}
      <div class="bundle-hero-side">
        {% if section.settings.hero_image != blank %}
          <div class="bundle-hero-box">
            {{ section.settings.hero_image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'bundle-hero-img' }}
          </div>
        {% endif %}
      </div>

      {% comment %} Right Product Area {% endcomment %}
      <div class="bundle-product-side">
        <h2 class="bundle-side-heading">{{ section.settings.heading }}</h2>
        <p class="bundle-side-sub">{{ section.settings.side_desc }}</p>
        
        <div class="bundle-grid" data-bundle-products>
          {% for block in section.blocks %}
            {% assign p = all_products[block.settings.product] %}
            {% if p %}
              {% assign v = p.selected_or_first_available_variant %}
              <div class="bundle-card" 
                   data-bundle-item 
                   data-variant-id="{{ v.id }}" 
                   data-price="{{ v.price }}" 
                   data-available="{{ v.available }}">
                
                <div class="bundle-card-top">
                  {% if block.settings.badge != blank %}
                    <span class="bundle-card-badge">{{ block.settings.badge }}</span>
                  {% else %}
                    <span></span>
                  {% endif %}
                  <div class="bundle-check-wrapper">
                    <input type="checkbox" checked class="bundle-hidden-check" id="chk-{{ section.id }}-{{ forloop.index }}" data-item-check>
                    <label for="chk-{{ section.id }}-{{ forloop.index }}" class="bundle-styled-check"></label>
                  </div>
                </div>

                <div class="bundle-card-media">
                  {{ p.featured_image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'bundle-prod-img' }}
                </div>

                <div class="bundle-card-info">
                  <h3 class="bundle-prod-title">{{ p.title }}</h3>
                  <div class="bundle-card-price">
                    <span class="price-now" data-price-now></span>
                    <span class="price-compare">{{ v.compare_at_price | money }}</span>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% comment %} Summary Bar {% endcomment %}
        <div class="bundle-summary-bar">
          <div class="bundle-summary-left">
            <span class="total-label">Total Price:</span>
            <span class="total-now" data-total-now></span>
            <span class="total-old" data-total-compare></span>
            <span class="save-badge" data-save-wrap hidden><span data-save-pill></span></span>
          </div>
          <div class="bundle-summary-right">
            <button type="button" class="btn-add" data-bundle-add>{{ section.settings.add_button_text }}</button>
            <button type="button" class="btn-buy" data-bundle-buy>{{ section.settings.buy_button_text }}</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% comment %} Terms Modal {% endcomment %}
  <div class="bundle-modal" id="modal-{{ section.id }}" aria-hidden="true">
    <div class="bundle-modal-overlay" data-terms-close></div>
    <div class="bundle-modal-content">
      <button class="bundle-modal-close" data-terms-close>&times;</button>
      <h3>Terms and Conditions</h3>
      <div class="bundle-modal-body">
        <ol>
          <li>Valid for orders placed between Dec. 8th - 25th, 2025.</li>
          <li>Buy 2 items to get 20% off, or buy 3 or more items to get 25% off.</li>
          <li>Discounts apply to full-price items only.</li>
          <li>Excludes the Gift Cards, Plus Membership and products from Tomtoc.</li>
          <li>Cannot be combined with other discounts, coupons, or codes.</li>
          <li>A 30-day price protection policy applies to eligible items.</li>
          <li>All tomtoc products included in this bundle follow tomtoc's official return and warranty policies. For support, please contact support@tomtoc.com.</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<style>
.bundle-container { max-width: 1400px; margin: 0 auto; padding: 40px 20px; font-family: -apple-system, BlinkMacSystemFont, sans-serif; }

/* Header - Top TitleÂ≠óÂè∑Âä†Â§ß */
.bundle-header { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 30px; border-bottom: 1px solid #eee; padding-bottom: 15px; }
.bundle-main-title { font-size: 36px; font-weight: 800; margin: 0; color: #000; letter-spacing: -1px; }
.bundle-main-desc { font-size: 16px; margin: 8px 0 0; opacity: 0.7; }
.bundle-terms-trigger { background: none; border: none; text-decoration: underline; cursor: pointer; font-size: 14px; padding-bottom: 5px; }

/* Main Content - ‰øùÊåÅÈ´òÂ∫¶Ê∞¥Âπ≥ÂØπÈΩê */
.bundle-main-content { 
  display: flex; 
  align-items: stretch; /* ÂÖ≥ÈîÆÔºöÂº∫Âà∂Â∑¶Âè≥È´òÂ∫¶‰∏ÄËá¥ */
  gap: 40px; 
}

/* Left Hero - 50:63ÊØî‰æã‰∏îÂ°´Êª°È´òÂ∫¶ */
.bundle-hero-side { flex: 0 0 35%; }
.bundle-hero-box { 
  width: 100%; 
  height: 100%; /* Â°´Êª°Áà∂ÂÆπÂô®È´òÂ∫¶ */
  aspect-ratio: 50 / 63; 
  border-radius: 4px; 
  overflow: hidden; 
}
.bundle-hero-img { width: 100%; height: 100%; object-fit: cover; display: block; }

/* Right Content */
.bundle-product-side { flex: 1; display: flex; flex-direction: column; justify-content: space-between; }
.bundle-side-heading { font-size: 26px; font-weight: 700; margin: 0 0 10px; }
.bundle-side-sub { font-size: 15px; margin: 0 0 25px; opacity: 0.6; }

/* Grid & Cards */
.bundle-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1px; background: #e5e7eb; border: 1px solid #e5e7eb; }
.bundle-card { background: #fff; padding: 20px; position: relative; display: flex; flex-direction: column; }
.bundle-card-top { display: flex; justify-content: space-between; margin-bottom: 15px; min-height: 24px; }
.bundle-card-badge { background: #1a2b56; color: #fff; font-size: 11px; padding: 3px 10px; border-radius: 12px; font-weight: 600; }

/* Styled Checkbox */
.bundle-check-wrapper { position: relative; width: 20px; height: 20px; }
.bundle-hidden-check { opacity: 0; position: absolute; }
.bundle-styled-check { display: block; width: 20px; height: 20px; border: 2px solid #1a2b56; border-radius: 2px; cursor: pointer; background: #fff; }
.bundle-hidden-check:checked + .bundle-styled-check { background: #1a2b56; }
.bundle-hidden-check:checked + .bundle-styled-check::after {
  content: ''; position: absolute; left: 6px; top: 2px; width: 5px; height: 10px;
  border: solid white; border-width: 0 2px 2px 0; transform: rotate(45deg);
}

/* Product Media - 4:3ÊØî‰æã */
.bundle-card-media { width: 100%; aspect-ratio: 4 / 3; margin-bottom: 20px; display: flex; align-items: center; justify-content: center; }
.bundle-prod-img { max-width: 100%; max-height: 100%; object-fit: contain; }

.bundle-prod-title { font-size: 14px; font-weight: 600; margin: 0 0 15px; line-height: 1.4; min-height: 2.8em; overflow: hidden; }
.bundle-card-price { display: flex; align-items: baseline; gap: 10px; }
.price-now { font-weight: 800; font-size: 18px; color: #000; }
.price-compare { text-decoration: line-through; opacity: 0.4; font-size: 14px; }

/* Bottom Bar */
.bundle-summary-bar { display: flex; justify-content: space-between; align-items: center; padding-top: 30px; margin-top: auto; border-top: 2px solid #000; }
.bundle-summary-left { display: flex; align-items: center; gap: 15px; }
.total-label { font-size: 18px; font-weight: 600; }
.total-now { font-size: 24px; font-weight: 800; color: #1a2b56; }
.total-old { text-decoration: line-through; opacity: 0.4; font-size: 16px; }
.save-badge { background: #d92d20; color: #fff; padding: 4px 12px; border-radius: 20px; font-size: 13px; font-weight: 700; }

.bundle-summary-right { display: flex; gap: 12px; }
.btn-add, .btn-buy { padding: 12px 30px; font-weight: 700; cursor: pointer; border: 2px solid #000; transition: 0.3s; }
.btn-add { background: #fff; color: #000; }
.btn-buy { background: #000; color: #fff; }
.btn-add:hover { background: #f5f5f5; }

/* Modal */
.bundle-modal { position: fixed; inset: 0; z-index: 1000; display: flex; align-items: center; justify-content: center; visibility: hidden; opacity: 0; transition: 0.3s; }
.bundle-modal[aria-hidden="false"] { visibility: visible; opacity: 1; }
.bundle-modal-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.5); backdrop-filter: blur(4px); }
.bundle-modal-content { position: relative; background: #fff; padding: 40px; width: 90%; max-width: 600px; border-radius: 4px; box-shadow: 0 20px 40px rgba(0,0,0,0.2); }
.bundle-modal-close { position: absolute; top: 20px; right: 20px; border: none; background: none; font-size: 32px; cursor: pointer; color: #999; }
.bundle-modal-body ol { padding-left: 20px; }
.bundle-modal-body li { margin-bottom: 12px; font-size: 14px; line-height: 1.6; color: #333; }

@media (max-width: 1024px) {
  .bundle-main-content { flex-direction: column; }
  .bundle-hero-side { display: none; }
}
</style>

<script>
(function() {
  const root = document.getElementById('bundle-{{ section.id }}');
  if (!root) return;

  const formatMoney = (cents) => {
    return (cents / 100).toLocaleString('en-US', { 
      style: 'currency', 
      currency: '{{ cart.currency.iso_code }}' 
    });
  };

  const els = {
    items: root.querySelectorAll('[data-bundle-item]'),
    totalNow: root.querySelector('[data-total-now]'),
    totalOld: root.querySelector('[data-total-compare]'),
    saveWrap: root.querySelector('[data-save-wrap]'),
    savePill: root.querySelector('[data-save-pill]'),
    modal: root.querySelector('.bundle-modal')
  };

  const update = () => {
    let rawTotal = 0;
    let selectedCount = 0;

    els.items.forEach(item => {
      const isChecked = item.querySelector('[data-item-check]').checked;
      const price = Number(item.dataset.price);
      
      if (isChecked) {
        item.style.opacity = "1";
        rawTotal += price;
        selectedCount++;
      } else {
        item.style.opacity = "0.4";
      }
      item.querySelector('[data-price-now]').textContent = formatMoney(price);
    });

    // Èò∂Ê¢ØÊäòÊâ£ÈÄªËæë
    let discountPercent = 0;
    if (selectedCount === 2) discountPercent = 20;
    else if (selectedCount >= 3) discountPercent = 25;

    const discountValue = Math.round(rawTotal * (discountPercent / 100));
    const finalTotal = rawTotal - discountValue;

    els.totalNow.textContent = formatMoney(finalTotal);
    if (discountValue > 0) {
      els.totalOld.textContent = formatMoney(rawTotal);
      els.totalOld.style.display = 'inline';
      els.saveWrap.hidden = false;
      els.savePill.textContent = `Save ${formatMoney(discountValue)}`;
    } else {
      els.totalOld.style.display = 'none';
      els.saveWrap.hidden = true;
    }
  };

  root.addEventListener('change', update);
  root.querySelector('[data-terms-open]').onclick = () => els.modal.setAttribute('aria-hidden', 'false');
  root.querySelectorAll('[data-terms-close]').forEach(b => b.onclick = () => els.modal.setAttribute('aria-hidden', 'true'));

  const handleCart = async (checkout) => {
    const items = [];
    els.items.forEach(item => {
      if (item.querySelector('[data-item-check]').checked) {
        items.push({ id: item.dataset.variantId, quantity: 1 });
      }
    });
    if (!items.length) return;
    
    await fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ items })
    });
    window.location.href = checkout ? '/checkout' : '/cart';
  };

  root.querySelector('[data-bundle-add]').onclick = () => handleCart(false);
  root.querySelector('[data-bundle-buy]').onclick = () => handleCart(true);

  update();
})();
</script>

