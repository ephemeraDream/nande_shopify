  "settings": [],
  "blocks": [
    {
      "type": "bundle_group",
      "name": "Bundle Group",
      "settings": [
        { "type": "header", "content": "Global Settings" },
        { "type": "text", "id": "kicker", "label": "Top Title", "default": "Collaboration üéÑ" },
        { "type": "text", "id": "subheading", "label": "Top Description" },
        { "type": "image_picker", "id": "hero_image", "label": "Side Hero Image" },
        { "type": "text", "id": "heading", "label": "Side Heading" },
        { "type": "textarea", "id": "side_desc", "label": "Side Description" },
        { "type": "header", "content": "Product 1" },
        { "type": "product", "id": "product_1", "label": "Product" },
        { "type": "text", "id": "badge_1", "label": "Badge" },
        { "type": "header", "content": "Product 2" },
        { "type": "product", "id": "product_2", "label": "Product" },
        { "type": "text", "id": "badge_2", "label": "Badge" },
        { "type": "header", "content": "Product 3" },
        { "type": "product", "id": "product_3", "label": "Product" },
        { "type": "text", "id": "badge_3", "label": "Badge" }
      ]
    }
  ],
  "presets": [{ "name": "Multi Bundle System" }]
}
{% endschema %}