{% comment %}
  Multi-Bundle System V3 - Fixed Compare Price
  - Terms only on the first block.
  - Hero image fully fills container.
  - Fixed missing strike-through (compare) prices.
{% endcomment %}

<section id="bundle-container-{{ section.id }}" class="multi-bundle-section">
  {% for block in section.blocks %}
    {% if block.type == 'bundle_group' %}
      <div class="bundle-collab" id="bundle-{{ block.id }}" {{ block.shopify_attributes }}>
        <div class="bundle-container">
          
          {% comment %} Header {% endcomment %}
          <div class="bundle-header">
            <div class="bundle-header-left">
              <h2 class="bundle-main-title">{{ block.settings.kicker }}</h2>
              <p class="bundle-main-desc">{{ block.settings.subheading }}</p>
            </div>
            {% if forloop.first %}
            <div class="bundle-header-right">
              <button type="button" class="bundle-terms-trigger" data-terms-open>Terms</button>
            </div>
            {% endif %}
          </div>

          {% comment %} Outer Border Wrapper {% endcomment %}
          <div class="bundle-main-outer-border">
            <div class="bundle-main-content">
              
              <div class="bundle-hero-side">
                {% if block.settings.hero_image != blank %}
                  <div class="bundle-hero-box">
                    {{ block.settings.hero_image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'bundle-hero-img' }}
                  </div>
                {% endif %}
              </div>

              <div class="bundle-product-side">
                <div class="bundle-side-header">
                  <h3 class="bundle-side-heading">{{ block.settings.heading }}</h3>
                  <p class="bundle-side-sub">{{ block.settings.side_desc }}</p>
                </div>
                
                <div class="bundle-grid">
                  {% for i in (1..3) %}
                    {% capture prod_id %}product_{{ i }}{% endcapture %}
                    {% capture badge_id %}badge_{{ i }}{% endcapture %}
                    {% assign p = all_products[block.settings[prod_id]] %}
                    
                    {% if p %}
                      {% assign v = p.selected_or_first_available_variant %}
                      <div class="bundle-card" data-bundle-item data-variant-id="{{ v.id }}" data-price="{{ v.price }}" data-compare-price="{{ v.compare_at_price | default: v.price }}">
                        <div class="bundle-card-top">
                          {% if block.settings[badge_id] != blank %}
                            <span class="bundle-card-badge">{{ block.settings[badge_id] }}</span>
                          {% else %}
                            <span></span>
                          {% endif %}
                          <div class="bundle-check-wrapper">
                            <input type="checkbox" checked class="bundle-hidden-check" id="chk-{{ block.id }}-{{ i }}" data-item-check>
                            <label for="chk-{{ block.id }}-{{ i }}" class="bundle-styled-check"></label>
                          </div>
                        </div>
                        <div class="bundle-card-media">
                          {{ p.featured_image | image_url: width: 400 | image_tag: loading: 'lazy', class: 'bundle-prod-img' }}
                        </div>
                        <div class="bundle-card-info">
                          <h4 class="bundle-prod-title">{{ p.title }}</h4>
                          <div class="bundle-card-price">
                            <span class="price-now" data-price-now></span>
                            {% comment %} Âçï‰∏™‰∫ßÂìÅÂàíÁ∫øÂéü‰ª∑ {% endcomment %}
                            <span class="price-compare" data-price-compare>{{ v.compare_at_price | money }}</span>
                          </div>
                        </div>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>

                {% comment %} Summary Bar {% endcomment %}
                <div class="bundle-summary-bar">
                  <div class="bundle-summary-left">
                    <div class="bundle-total-box">
                      <span class="total-label">Total:</span>
                      <span class="total-now" data-total-now></span>
                      {% comment %} Â∫ïÈÉ®ÊÄª‰ª∑ÂàíÁ∫øÂéü‰ª∑ {% endcomment %}
                      <span class="total-old" data-total-compare></span>
                    </div>
                    <span class="save-badge" data-save-wrap hidden><span data-save-pill></span></span>
                  </div>
                  <div class="bundle-summary-right">
                    <button type="button" class="btn-add" data-bundle-add>Add All</button>
                    <button type="button" class="btn-buy" data-bundle-buy>Buy Now</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {% if forloop.first %}
        <div class="bundle-modal" id="modal-{{ section.id }}" aria-hidden="true">
          <div class="bundle-modal-overlay" data-terms-close></div>
          <div class="bundle-modal-content">
            <button class="bundle-modal-close" data-terms-close>&times;</button>
            <h3>Terms and Conditions</h3>
            <div class="bundle-modal-body">
              <ol>
                <li>Valid for orders placed between Dec. 8th - 25th, 2025.</li>
                <li>Buy 2 items to get 20% off, or buy 3 or more items to get 25% off.</li>
                <li>Discounts apply to full-price items only.</li>
                <li>Excludes Gift Cards, Plus Membership and products from Tomtoc.</li>
              </ol>
            </div>
          </div>
        </div>
      {% endif %}
    {% endif %}
  {% endfor %}
</section>

<style>
.multi-bundle-section { padding: 40px 0; }
.bundle-collab { margin-bottom: 60px; }
.bundle-container { max-width: 1400px; margin: 0 auto; padding: 0 20px; }

.bundle-header { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 20px; }
.bundle-main-title { font-size: 36px; font-weight: 800; margin: 0; letter-spacing: -1px; }
.bundle-main-desc { font-size: 16px; opacity: 0.7; margin: 5px 0 0; }
.bundle-terms-trigger { background: none; border: none; text-decoration: underline; cursor: pointer; font-size: 14px; }

.bundle-main-outer-border { border: 1px solid #000; overflow: hidden; background: #fff; }
.bundle-main-content { display: flex; align-items: stretch; }

.bundle-hero-side { flex: 0 0 30%; border-right: 1px solid #000; position: relative; min-height: 400px; }
.bundle-hero-box { position: absolute; inset: 0; }
.bundle-hero-img { width: 100%; height: 100%; object-fit: cover; display: block; }

.bundle-product-side { flex: 1; display: flex; flex-direction: column; }
.bundle-side-header { padding: 25px 20px; }
.bundle-side-heading { font-size: 24px; font-weight: 700; margin: 0; }
.bundle-side-sub { font-size: 14px; opacity: 0.6; margin: 5px 0 0; }

.bundle-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1px; background: #000; border-top: 1px solid #000; border-bottom: 1px solid #000; }
.bundle-card { background: #fff; padding: 15px; display: flex; flex-direction: column; }

.bundle-card-top { display: flex; justify-content: space-between; margin-bottom: 10px; min-height: 24px; }
.bundle-card-badge { background: #1a2b56; color: #fff; font-size: 10px; padding: 2px 8px; border-radius: 12px; font-weight: 600; }

.bundle-check-wrapper { position: relative; width: 18px; height: 18px; }
.bundle-hidden-check { opacity: 0; position: absolute; }
.bundle-styled-check { display: block; width: 18px; height: 18px; border: 1.5px solid #1a2b56; border-radius: 2px; cursor: pointer; }
.bundle-hidden-check:checked + .bundle-styled-check { background: #1a2b56; }
.bundle-hidden-check:checked + .bundle-styled-check::after {
  content: ''; position: absolute; left: 6px; top: 2px; width: 4px; height: 8px;
  border: solid white; border-width: 0 1.5px 1.5px 0; transform: rotate(45deg);
}

.bundle-card-media { width: 100%; aspect-ratio: 4 / 3; display: flex; align-items: center; justify-content: center; background: #f4f4f4; margin-bottom: 15px; }
.bundle-prod-img { max-width: 90%; max-height: 90%; object-fit: contain; }
.bundle-prod-title { font-size: 13px; font-weight: 600; margin: 0 0 10px; min-height: 2.8em; line-height: 1.4; overflow: hidden; }

.bundle-card-price { display: flex; align-items: baseline; gap: 8px; }
.price-now { font-weight: 800; font-size: 16px; color: #000; }
.price-compare { text-decoration: line-through; opacity: 0.3; font-size: 13px; }

.bundle-summary-bar { display: flex; justify-content: space-between; align-items: center; padding: 20px; margin-top: auto; }
.bundle-total-box { display: flex; align-items: baseline; gap: 8px; }
.total-label { font-size: 16px; font-weight: 600; }
.total-now { font-size: 24px; font-weight: 800; color: #1a2b56; }
.total-old { text-decoration: line-through; opacity: 0.3; font-size: 16px; }
.save-badge { background: #d92d20; color: #fff; padding: 3px 12px; border-radius: 20px; font-size: 12px; font-weight: 700; margin-left: 10px; }

.btn-add, .btn-buy { padding: 12px 25px; font-weight: 700; cursor: pointer; border: 2px solid #000; transition: 0.3s; font-size: 14px; }
.btn-buy { background: #000; color: #fff; margin-left: 10px; }

@media (max-width: 1024px) {
  .bundle-main-content { flex-direction: column; }
  .bundle-hero-side { border-right: none; border-bottom: 1px solid #000; width: 100%; height: 350px; flex: none; }
  .bundle-grid { grid-template-columns: repeat(2, 1fr); }
}
@media (max-width: 640px) {
  .bundle-grid { grid-template-columns: 1fr; }
  .bundle-summary-bar { flex-direction: column; align-items: flex-start; gap: 15px; }
  .bundle-summary-right { width: 100%; display: flex; }
  .btn-add, .btn-buy { flex: 1; text-align: center; }
}

.bundle-modal { position: fixed; inset: 0; z-index: 10000; display: flex; align-items: center; justify-content: center; visibility: hidden; opacity: 0; transition: 0.3s; }
.bundle-modal[aria-hidden="false"] { visibility: visible; opacity: 1; }
.bundle-modal-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.5); backdrop-filter: blur(4px); }
.bundle-modal-content { position: relative; background: #fff; padding: 35px; width: 90%; max-width: 550px; border-radius: 4px; z-index: 10001; }
.bundle-modal-close { position: absolute; top: 15px; right: 15px; border: none; background: none; font-size: 32px; cursor: pointer; }
</style>

<script>
(function() {
  const formatMoney = (cents) => {
    return (cents / 100).toLocaleString('en-US', { style: 'currency', currency: '{{ cart.currency.iso_code }}' });
  };

  const initBundle = (el) => {
    const items = el.querySelectorAll('[data-bundle-item]');
    const totalNow = el.querySelector('[data-total-now]');
    const totalOld = el.querySelector('[data-total-compare]');
    const saveWrap = el.querySelector('[data-save-wrap]');
    const savePill = el.querySelector('[data-save-pill]');

    const update = () => {
      let rawTotal = 0, count = 0;
      items.forEach(item => {
        const isChecked = item.querySelector('[data-item-check]').checked;
        const price = Number(item.dataset.price);
        if (isChecked) { rawTotal += price; count++; item.style.opacity = "1"; }
        else { item.style.opacity = "0.4"; }
        item.querySelector('[data-price-now]').textContent = formatMoney(price);
      });

      // Èò∂Ê¢ØÊäòÊâ£ÈÄªËæë
      let discount = count === 2 ? 0.20 : (count >= 3 ? 0.25 : 0);
      let final = Math.round(rawTotal * (1 - discount));
      
      totalNow.textContent = formatMoney(final);
      
      if (discount > 0) {
        totalOld.textContent = formatMoney(rawTotal);
        totalOld.style.display = 'inline';
        saveWrap.hidden = false;
        savePill.textContent = `Save ${formatMoney(rawTotal - final)}`;
      } else {
        totalOld.style.display = 'none';
        saveWrap.hidden = true;
      }
    };

    el.addEventListener('change', update);
    el.querySelector('[data-bundle-add]').onclick = () => handleCart(el, false);
    el.querySelector('[data-bundle-buy]').onclick = () => handleCart(el, true);
    update();
  };

  const handleCart = async (el, go) => {
    const items = [];
    el.querySelectorAll('[data-bundle-item]').forEach(item => {
      if (item.querySelector('[data-item-check]').checked) {
        items.push({ id: item.dataset.variantId, quantity: 1 });
      }
    });
    if (!items.length) return;
    await fetch('/cart/add.js', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ items }) });
    window.location.href = go ? '/checkout' : '/cart';
  };

  document.querySelectorAll('.bundle-collab').forEach(initBundle);

  // Modal logic
  const termsTrigger = document.querySelector('[data-terms-open]');
  const modal = document.querySelector('.bundle-modal');
  if (termsTrigger && modal) {
    termsTrigger.onclick = () => modal.setAttribute('aria-hidden', 'false');
    modal.querySelectorAll('[data-terms-close]').forEach(b => {
      b.onclick = () => modal.setAttribute('aria-hidden', 'true');
    });
  }
})();
</script>

