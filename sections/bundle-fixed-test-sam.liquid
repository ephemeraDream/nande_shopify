{% comment %}
  Bundle Collaboration Section - Final Optimized Version
  - Layout based on reference frame image
  - Image ratios: Product (4:3), Hero (50:63)
  - Tiered Discount Logic: 2 items (20%), 3+ items (25%)
{% endcomment %}

<section id="bundle-{{ section.id }}" class="bundle-collab" data-section-id="{{ section.id }}">
  <div class="bundle-container">
    {% comment %} Top Header Section {% endcomment %}
    <div class="bundle-header">
      <div class="bundle-header-left">
        <h1 class="bundle-main-title">{{ section.settings.kicker }}</h1>
        <p class="bundle-main-desc">{{ section.settings.subheading }}</p>
      </div>
      <div class="bundle-header-right">
        <button type="button" class="bundle-terms-trigger" data-terms-open>Terms</button>
      </div>
    </div>

    <div class="bundle-main-content">
      {% comment %} Left Hero Image (50:63 ratio) {% endcomment %}
      <div class="bundle-hero-side">
        {% if section.settings.hero_image != blank %}
          <div class="bundle-hero-box">
            {{ section.settings.hero_image | image_url: width: 1000 | image_tag: loading: 'lazy', class: 'bundle-hero-img' }}
          </div>
        {% endif %}
      </div>

      {% comment %} Right Product Area {% endcomment %}
      <div class="bundle-product-side">
        <h2 class="bundle-side-heading">{{ section.settings.heading }}</h2>
        <p class="bundle-side-sub">{{ section.settings.side_desc | default: 'Save up to 30% on outdoor adventure gifts.' }}</p>
        
        <div class="bundle-grid" data-bundle-products>
          {% for block in section.blocks %}
            {% assign p = all_products[block.settings.product] %}
            {% if p %}
              {% assign v = p.selected_or_first_available_variant %}
              <div class="bundle-card" 
                   data-bundle-item 
                   data-variant-id="{{ v.id }}" 
                   data-price="{{ v.price }}" 
                   data-available="{{ v.available }}">
                
                {% comment %} Badge & Checkbox Container {% endcomment %}
                <div class="bundle-card-top">
                  {% if block.settings.badge != blank %}
                    <span class="bundle-card-badge">{{ block.settings.badge }}</span>
                  {% else %}
                    <span></span>
                  {% endif %}
                  <div class="bundle-check-wrapper">
                    <input type="checkbox" checked class="bundle-hidden-check" id="chk-{{ section.id }}-{{ forloop.index }}" data-item-check>
                    <label for="chk-{{ section.id }}-{{ forloop.index }}" class="bundle-styled-check"></label>
                  </div>
                </div>

                {% comment %} Product Image (4:3 ratio) {% endcomment %}
                <div class="bundle-card-media">
                  {{ p.featured_image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'bundle-prod-img' }}
                </div>

                <div class="bundle-card-info">
                  <h3 class="bundle-prod-title">{{ p.title }}</h3>
                  <div class="bundle-card-price">
                    <span class="price-now" data-price-now></span>
                    <span class="price-compare" data-price-compare>{{ v.compare_at_price | money }}</span>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% comment %} Bottom Summary Bar {% endcomment %}
        <div class="bundle-summary-bar">
          <div class="bundle-summary-left">
            <span class="total-label">Total Price:</span>
            <span class="total-now" data-total-now></span>
            <span class="total-old" data-total-compare></span>
            <span class="save-badge" data-save-wrap hidden><span data-save-pill></span></span>
          </div>
          <div class="bundle-summary-right">
            <button type="button" class="btn-add" data-bundle-add>{{ section.settings.add_button_text }}</button>
            <button type="button" class="btn-buy" data-bundle-buy>{{ section.settings.buy_button_text }}</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% comment %} Terms Modal {% endcomment %}
  <div class="bundle-modal" id="modal-{{ section.id }}" aria-hidden="true">
    <div class="bundle-modal-overlay" data-terms-close></div>
    <div class="bundle-modal-content">
      <button class="bundle-modal-close" data-terms-close>&times;</button>
      <h3>Terms and Conditions</h3>
      <div class="bundle-modal-body">
        <ol>
          <li>Valid for orders placed between Dec. 8th - 25th, 2025.</li>
          <li>Buy 2 items to get 20% off, or buy 3 or more items to get 25% off.</li>
          <li>Discounts apply to full-price items only.</li>
          <li>Excludes the Gift Cards, Plus Membership and produts form Tomtoc.</li>
          <li>Cannot be combined with other discounts, coupons, or codes.</li>
          <li>A 30-day price protection policy applies to eligible items.</li>
          <li>All tomtoc products included in this bundle follow tomtoc's official return and warranty policies. For support, please contact support@tomtoc.com.</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<style>
:root {
  --bundle-black: #000;
  --bundle-gray: #f5f5f7;
  --bundle-border: #e5e7eb;
}

.bundle-container { max-width: 1400px; margin: 0 auto; padding: 20px; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica; }

/* Header Layout */
.bundle-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20px; }
.bundle-main-title { font-size: 28px; font-weight: 700; margin: 0; letter-spacing: -0.5px; }
.bundle-main-desc { font-size: 14px; margin: 5px 0 0; opacity: 0.8; }
.bundle-terms-trigger { background: none; border: none; text-decoration: underline; cursor: pointer; font-size: 14px; color: var(--bundle-black); }

/* Main Grid Layout */
.bundle-main-content { display: grid; grid-template-columns: 35% 1fr; gap: 30px; }

/* Left Hero: 50:63 Ratio  */
.bundle-hero-box { 
  width: 100%; 
  aspect-ratio: 50 / 63; 
  overflow: hidden; 
  border-radius: 4px;
}
.bundle-hero-img { width: 100%; height: 100%; object-fit: cover; }

/* Right Content */
.bundle-side-heading { font-size: 24px; font-weight: 700; margin: 0 0 5px; }
.bundle-side-sub { font-size: 15px; margin: 0 0 25px; opacity: 0.7; }

/* Product Grid [cite: 23] */
.bundle-grid { 
  display: grid; 
  grid-template-columns: repeat(3, 1fr); 
  gap: 1px; 
  background: var(--bundle-border);
  border: 1px solid var(--bundle-border);
  margin-bottom: 30px;
}
.bundle-card { background: #fff; padding: 15px; display: flex; flex-direction: column; position: relative; transition: opacity 0.3s; }

/* Custom Checkbox Style from Reference */
.bundle-card-top { display: flex; justify-content: space-between; align-items: flex-start; min-height: 24px; margin-bottom: 10px; }
.bundle-card-badge { background: #1a2b56; color: #fff; font-size: 11px; padding: 3px 8px; border-radius: 12px; font-weight: 600; }

.bundle-check-wrapper { position: relative; width: 18px; height: 18px; }
.bundle-hidden-check { opacity: 0; position: absolute; }
.bundle-styled-check { 
  display: block; width: 18px; height: 18px; border: 1.5px solid #1a2b56; border-radius: 2px; cursor: pointer;
  background: #fff; transition: all 0.2s;
}
.bundle-hidden-check:checked + .bundle-styled-check { background: #1a2b56; }
.bundle-hidden-check:checked + .bundle-styled-check::after {
  content: ''; position: absolute; left: 6px; top: 2px; width: 4px; height: 8px;
  border: solid white; border-width: 0 2px 2px 0; transform: rotate(45deg);
}

/* Product Image: 4:3 Ratio  */
.bundle-card-media { width: 100%; aspect-ratio: 4 / 3; margin-bottom: 15px; display: flex; align-items: center; justify-content: center; }
.bundle-prod-img { max-width: 100%; max-height: 100%; object-fit: contain; }

.bundle-prod-title { font-size: 13px; font-weight: 500; margin: 0 0 10px; line-height: 1.4; min-height: 3em; }
.bundle-card-price { display: flex; align-items: baseline; gap: 8px; }
.price-now { font-weight: 700; font-size: 16px; }
.price-compare { text-decoration: line-through; opacity: 0.4; font-size: 13px; }

/* Summary Bar */
.bundle-summary-bar { 
  display: flex; justify-content: space-between; align-items: center; 
  padding: 20px 0; border-top: 1.5px solid var(--bundle-border);
}
.bundle-summary-left { display: flex; align-items: center; gap: 10px; }
.total-label { font-size: 16px; font-weight: 500; }
.total-now { font-size: 20px; font-weight: 700; color: #1a2b56; }
.total-old { text-decoration: line-through; opacity: 0.4; font-size: 15px; }
.save-badge { background: #d92d20; color: #fff; padding: 2px 10px; border-radius: 10px; font-size: 12px; font-weight: 600; }

.bundle-summary-right { display: flex; gap: 10px; }
.btn-add, .btn-buy { 
  padding: 10px 25px; border-radius: 0; font-weight: 600; font-size: 14px; cursor: pointer; transition: 0.2s;
}
.btn-add { background: #fff; border: 1px solid var(--bundle-black); color: var(--bundle-black); }
.btn-buy { background: var(--bundle-black); border: 1px solid var(--bundle-black); color: #fff; }

/* Modal */
.bundle-modal { position: fixed; inset: 0; z-index: 1000; display: flex; align-items: center; justify-content: center; visibility: hidden; opacity: 0; }
.bundle-modal[aria-hidden="false"] { visibility: visible; opacity: 1; }
.bundle-modal-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.4); backdrop-filter: blur(3px); }
.bundle-modal-content { position: relative; background: #fff; padding: 40px; width: 90%; max-width: 550px; border-radius: 8px; z-index: 1001; }
.bundle-modal-close { position: absolute; top: 15px; right: 15px; border: none; background: none; font-size: 28px; cursor: pointer; }
.bundle-modal-body li { margin-bottom: 10px; font-size: 14px; line-height: 1.6; color: #444; }

@media (max-width: 1024px) {
  .bundle-main-content { grid-template-columns: 1fr; }
  .bundle-hero-side { display: none; }
  .bundle-grid { grid-template-columns: 1fr 1fr; }
}
@media (max-width: 640px) {
  .bundle-grid { grid-template-columns: 1fr; }
  .bundle-summary-bar { flex-direction: column; align-items: flex-start; gap: 15px; }
  .bundle-summary-right { width: 100%; }
  .btn-add, .btn-buy { flex: 1; }
}
</style>

<script>
(function() {
  const root = document.getElementById('bundle-{{ section.id }}');
  if (!root) return;

  const money = (cents) => {
    return (cents / 100).toLocaleString('en-US', { 
      style: 'currency', 
      currency: '{{ cart.currency.iso_code }}' 
    });
  };

  const els = {
    items: root.querySelectorAll('[data-bundle-item]'),
    totalNow: root.querySelector('[data-total-now]'),
    totalOld: root.querySelector('[data-total-compare]'),
    saveWrap: root.querySelector('[data-save-wrap]'),
    savePill: root.querySelector('[data-save-pill]'),
    modal: root.querySelector('.bundle-modal')
  };

  const update = () => {
    let rawTotal = 0;
    let selectedCount = 0;

    els.items.forEach(item => {
      const isChecked = item.querySelector('[data-item-check]').checked;
      const price = Number(item.dataset.price);
      
      if (isChecked) {
        item.style.opacity = "1";
        rawTotal += price;
        selectedCount++;
      } else {
        item.style.opacity = "0.5";
      }
      item.querySelector('[data-price-now]').textContent = money(price);
    });

    // Tiered Discount Logic [cite: 50, 51]
    let discountPercent = 0;
    if (selectedCount === 2) discountPercent = 20;
    else if (selectedCount >= 3) discountPercent = 25;

    const discountValue = Math.round(rawTotal * (discountPercent / 100));
    const finalTotal = rawTotal - discountValue;

    els.totalNow.textContent = money(finalTotal);
    if (discountValue > 0) {
      els.totalOld.textContent = money(rawTotal);
      els.totalOld.style.display = 'inline';
      els.saveWrap.hidden = false;
      els.savePill.textContent = `Save ${money(discountValue)}`;
    } else {
      els.totalOld.style.display = 'none';
      els.saveWrap.hidden = true;
    }
  };

  root.addEventListener('change', update);
  root.querySelector('[data-terms-open]').onclick = () => els.modal.setAttribute('aria-hidden', 'false');
  root.querySelectorAll('[data-terms-close]').forEach(b => b.onclick = () => els.modal.setAttribute('aria-hidden', 'true'));

  const addToCart = async (go) => {
    const items = [];
    els.items.forEach(item => {
      if (item.querySelector('[data-item-check]').checked) {
        items.push({ id: item.dataset.variantId, quantity: 1 });
      }
    });
    if (items.length === 0) return;
    
    await fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ items })
    });
    window.location.href = go ? '/checkout' : '/cart';
  };

  root.querySelector('[data-bundle-add]').onclick = () => addToCart(false);
  root.querySelector('[data-bundle-buy]').onclick = () => addToCart(true);

  update();
})();
</script>

