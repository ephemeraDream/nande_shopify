{{ 'section-maidesite-swiper.css' | asset_url | stylesheet_tag }}

<div class="maidesite_swiper_section padding-sider" id="maidesite_swiper_section-{{ section.id }}">
  <div class="maidesite_swiper">
    <h2 class="maidesite_swiper_title">{{ section.settings.title }}</h2>
    <h4 class="maidesite_swiper_text">{{ section.settings.text }}</h4>
    <div class="maidesite_swiper_image_contain">
      <div class="swiper maidesite_swiper_image">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              {{-
                block.settings.image
                | image_url: width: block.settings.image.width
                | image_tag: alt: block.settings.title
              -}}
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="maidesite_swiper_prev">{{- 'swiper-left.svg' | inline_asset_content -}}</div>
      <div class="maidesite_swiper_next">{{- 'swiper-right.svg' | inline_asset_content -}}</div>
    </div>
    <div class="swiper maidesite_swiper_desc">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {{ block.settings.text }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  (() => {
    const sectionId = '{{ section.id }}';
    const sectionEl = document.getElementById('maidesite_swiper_section-' + sectionId);
    if (!sectionEl) return;
  
    const imageEl = sectionEl.querySelector('.maidesite_swiper_image');
    const textEl = sectionEl.querySelector('.maidesite_swiper_desc');
  
    const maidesite_swiper_text = new Swiper(textEl, {
      spaceBetween: 0,
      effect: 'fade',
      allowTouchMove: false,
    });
  
    const maidesite_swiper_image = new Swiper(imageEl, {
      slidesPerView: 4,
      spaceBetween: 24,
      navigation: {
        nextEl: sectionEl.querySelector('.maidesite_swiper_next'),
        prevEl: sectionEl.querySelector('.maidesite_swiper_prev'),
      },
      breakpoints: {
        1440: { slidesPerView: 4 },
        1024: { slidesPerView: 4 },
        768:  { slidesPerView: 3 },
        0:    { slidesPerView: 2 },
      },
      thumbs: {
        swiper: maidesite_swiper_text,
      },
    });
  
  })();
  
  
</script>

{% schema %}
{
  "name": "maidesite swiper",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "text"
    }
  ],
  "blocks": [
    {
      "type": "swiper",
      "name": "swiper",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "maidesite swiper",
      "blocks": [
        {
          "type": "swiper"
        }
      ]
    }
  ]
}
{% endschema %}
