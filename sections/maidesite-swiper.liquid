{{ 'section-maidesite-swiper.css' | asset_url | stylesheet_tag }}

<div class="maidesite_swiper padding-sider">
  <div class="maidesite_swiper_title">{{ section.settings.title }}</div>
  <div class="maidesite_swiper_text">{{ section.settings.text }}</div>
  <div class="maidesite_swiper_image_contain">
    <div class="swiper maidesite_swiper_image">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            {{-
              block.settings.image
              | image_url: width: block.settings.image.width
              | image_tag: alt: block.settings.title
            -}}
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="maidesite_swiper_prev">{{- 'swiper-left.svg' | inline_asset_content -}}</div>
    <div class="maidesite_swiper_next">{{- 'swiper-right.svg' | inline_asset_content -}}</div>
  </div>
  <div class="swiper maidesite_swiper_desc">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {{ block.settings.text }}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  const maidesite_swiper_text = new Swiper('.maidesite_swiper_desc', {
    spaceBetween: 0,
    {% comment %} loop: true, {% endcomment %}
  });

  const maidesite_swiper_image = new Swiper('.maidesite_swiper_image', {
    {% comment %} autoplay: true,
    loop: true, {% endcomment %}
    slidesPerView: 4,
    spaceBetween: 24,
    {% comment %} navigation: {
      nextEl: '.maidesite_swiper_next',
      prevEl: '.maidesite_swiper_prev',
    }, {% endcomment %}
    on: {
      slideChange: function () {
        maidesite_swiper_text.slideTo(this.realIndex);
      },
    },
  });

  const maidesite_swiper_image_slides = maidesite_swiper_image.slides;
  let maidesite_swiper_index = 0;

  setInterval(() => {
    maidesite_swiper_image_slides.forEach(slide => slide.classList.remove('swiper-slide-active'));
    maidesite_swiper_image_slides[maidesite_swiper_index].classList.add('swiper-slide-active');
    maidesite_swiper_index = (maidesite_swiper_index + 1) % maidesite_swiper_image_slides.length;
    maidesite_swiper_image.slideTo(maidesite_swiper_index)
  }, 2000);

  document.querySelector(".maidesite_swiper_prev").addEventListener("click", () => {

  })
</script>

{% schema %}
{
  "name": "maidesite swiper",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "text"
    }
  ],
  "blocks": [
    {
      "type": "swiper",
      "name": "swiper",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "maidesite swiper",
      "blocks": [
        {
          "type": "swiper"
        }
      ]
    }
  ]
}
{% endschema %}
