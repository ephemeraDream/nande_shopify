<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700;900&display=swap');

/* ===========================
   Coupon Section (Base)
   =========================== */
.coupon-section {
  position: relative;
  font-family: 'Poppins', Arial, sans-serif;
  background: radial-gradient(circle at top, #1a2a4f 0%, #0b1020 45%, #05070d 100%);
  color: #ffffff;
  padding: 70px 20px;
  text-align: center;
  overflow: hidden;
}

/* Á≤íÂ≠êËÉåÊôØ */
.coupon-section::before {
  content: '';
  position: absolute;
  inset: 0;
  background-image:
    radial-gradient(2px 2px at 15% 20%, rgba(255,215,120,.8) 50%, transparent 52%),
    radial-gradient(1.5px 1.5px at 70% 30%, rgba(255,215,120,.7) 50%, transparent 52%),
    radial-gradient(2px 2px at 40% 80%, rgba(255,215,120,.6) 50%, transparent 52%);
  background-size: 220px 220px;
  animation: sparkle 18s linear infinite;
  opacity: .25;
  z-index: 1;
  pointer-events: none;
}

@keyframes sparkle {
  from { background-position: 0 0; }
  to   { background-position: 0 220px; }
}

.coupon-section > * {
  position: relative;
  z-index: 2;
}

/* Ê†áÈ¢ò */
.coupon-section h2 {
  font-size: 44px;
  font-weight: 900;
  margin-bottom: 18px;
  background: linear-gradient(180deg, #fff4c4, #d4a94f);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ÂâØÊ†áÈ¢ò */
.coupon-section > p {
  font-size: 18px;
  color: #d6d9e2;
  margin-bottom: 32px;
}

/* CTA */
.shop-now-btn {
  display: inline-block;
  background: linear-gradient(135deg, #e7c36a, #b8923c);
  color: #000;
  padding: 14px 36px;
  border-radius: 8px;
  font-weight: 700;
  text-decoration: none;
  margin-bottom: 55px;
}

/* Âç°ÁâáÂÆπÂô® */
.coupon-cards {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}

/* Âç°Áâá */
.coupon-card {
  background: rgba(255,255,255,0.06);
  backdrop-filter: blur(14px);
  border-radius: 22px;
  padding: 42px 30px;
  min-width: 260px;
  min-height: 300px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

/* ÈáëÈ¢ù */
.coupon-card h3 {
  font-size: 60px;
  font-weight: 900;
  background: linear-gradient(180deg, #fff5cc, #d4a94f);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ÊñáÊ°à */
.coupon-card p {
  font-size: 18px;
  color: #d0d4e0;
}

/* Footer */
.coupon-footer {
  border-top: 1px solid rgba(255,255,255,0.25);
  padding-top: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* ÊåâÈíÆ */
.copy-btn {
  padding: 10px 18px;
  border-radius: 6px;
  border: 1px solid #fff;
  background: transparent;
  color: #fff;
  font-weight: 700;
  cursor: pointer;
}

.copy-btn.copied {
  background: #ffd66b;
  border-color: #ffd66b;
  color: #000;
}

.copy-btn.go-to-shop {
  background: linear-gradient(135deg, #e7c36a, #b8923c);
  border-color: transparent;
  color: #000;
}

/* ===========================
   üî• Collection Slim Mode
   =========================== */
.coupon-section--collection {
  padding: 24px 16px;
  margin-top: 20px;
}

.coupon-section--collection h2 {
  font-size: 24px;
  margin-bottom: 6px;
}

.coupon-section--collection > p {
  font-size: 14px;
  margin-bottom: 12px;
}

.coupon-section--collection .shop-now-btn {
  padding: 8px 18px;
  font-size: 14px;
  margin-bottom: 18px;
}

.coupon-section--collection .coupon-cards {
  gap: 16px;
}

.coupon-section--collection .coupon-card {
  min-height: auto;
  padding: 14px 18px;
  border-radius: 12px;
}

.coupon-section--collection .coupon-card h3 {
  font-size: 28px;
}

.coupon-section--collection .coupon-card p {
  font-size: 13px;
}

.coupon-section--collection .coupon-footer {
  padding-top: 10px;
}

/* ÈöêËóè WOW ËØ¢‰ª∑Âç° */
.coupon-section--collection .coupon-card:last-child {
  display: none;
}

/* ÁßªÂä®Á´ØÂè™‰øùÁïô 2 Ê°£ */
@media (max-width: 768px) {
  .coupon-section--collection .coupon-card:nth-child(n+3) {
    display: none;
  }
}
</style>

<div class="coupon-section coupon-section--collection">
  <h2>Neujahrs-Rabatt</h2>
  <p>Code kopieren und direkt sparen</p>

  <a href="https://www.maidesite.de/collections/hohenverstellbarer-schreibtisch" class="shop-now-btn">
    Jetzt sparen
  </a>

  <div class="coupon-cards">
    <div class="coupon-card">
      <div>
        <h3>40 ‚Ç¨</h3>
        <p>ab 499 ‚Ç¨ Einkaufswert</p>
      </div>
      <div class="coupon-footer">
        <span>MD40</span>
        <button class="copy-btn">Kopieren</button>
      </div>
    </div>

    <div class="coupon-card">
      <div>
        <h3>120 ‚Ç¨</h3>
        <p>ab 999 ‚Ç¨ Einkaufswert</p>
      </div>
      <div class="coupon-footer">
        <span>MD120</span>
        <button class="copy-btn">Kopieren</button>
      </div>
    </div>

    <div class="coupon-card">
      <div>
        <h3>250 ‚Ç¨</h3>
        <p>ab 1999 ‚Ç¨ Einkaufswert</p>
      </div>
      <div class="coupon-footer">
        <span>MD250</span>
        <button class="copy-btn">Kopieren</button>
      </div>
    </div>
  </div>
</div>

<script>
document.querySelectorAll('.coupon-section .copy-btn').forEach(btn => {
  btn.addEventListener('click', () => {
    const code = btn.previousElementSibling.innerText;
    navigator.clipboard.writeText(code).then(() => {
      btn.classList.add('copied');
      btn.innerText = '‚úî Kopiert';

      setTimeout(() => {
        btn.classList.remove('copied');
        btn.classList.add('go-to-shop');
        btn.innerText = 'Jetzt kaufen';
        btn.onclick = () => {
          window.location.href =
            'https://www.maidesite.de/collections/hohenverstellbarer-schreibtisch';
        };
      }, 2000);
    });
  });
});
</script>
