      <div class="coupon-code-box">
        <input type="text" id="coupon120" value="MD120" readonly>
        <button onclick="copyCoupon('coupon120', this)">Copy</button>
      </div>
    </div>

    <!-- Coupon 3 -->
    <div class="coupon-item">
      <div class="coupon-value">250 € Off</div>
      <div class="coupon-condition">ab 1999 € Einkaufswert</div>
      <div class="coupon-code-box">
        <input type="text" id="coupon250" value="MD250" readonly>
        <button onclick="copyCoupon('coupon250', this)">Copy</button>
      </div>
