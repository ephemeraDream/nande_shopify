<!-- ===============================
     Slim Discount Coupon Module
     =============================== -->

<div class="collection-coupon-slim">

  <!-- Title -->
  <h3 class="collection-coupon-title">
    Buy More, Save More
  </h3>

  <!-- Coupon Codes -->
  <div class="collection-discount-codes">

    <!-- Coupon 1 -->
