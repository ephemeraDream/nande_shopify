<!-- ===============================
     Styles
     =============================== -->
<style>
.collection-coupon-slim {
  margin-top: 20px;
  padding: 16px 20px;
  border: 1px solid #e5e5e5;
  border-radius: 10px;
  background: #fafafa;
}

.collection-coupon-title {
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 14px;
  text-align: center;
  color: #111;
}

.collection-discount-codes {
  display: flex;
  gap: 14px;
  justify-content: space-between;
  flex-wrap: wrap;
}

.coupon-item {
  flex: 1 1 30%;
  min-width: 180px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 12px;
  background: #ffffff;
}

.coupon-value {
  font-size: 15px;
  font-weight: 700;
  margin-bottom: 4px;
}

.coupon-condition {
  font-size: 12px;
  color: #666;
  margin-bottom: 10px;
}

.coupon-code-box {
  display: flex;
  gap: 8px;
  align-items: center;
  background: #000;
  padding: 6px;
  border-radius: 6px;
}

.coupon-code-box input {
  flex: 1;
  max-width: 100px;
  padding: 4px 8px;
  font-size: 12px;
  border-radius: 4px;
  border: 1px solid #ccc;
}

.coupon-code-box button {
  background-color: #bdff00;
  color: #000;
  border: none;
  border-radius: 4px;
  padding: 0 10px;
  cursor: pointer;
  height: 32px;
  font-size: 11px;
  font-weight: 700;
  transition: background-color .3s ease;
}

.coupon-code-box button:hover {
  background-color: #a3e600;
}

.coupon-code-box button.copied {
  background-color: #28a745;
  color: #fff;
}

/* Mobile */
@media (max-width: 768px) {
  .collection-discount-codes {
    gap: 10px;
  }
  .coupon-item {
    flex: 1 1 100%;
  }
}
</style>

<!-- ===============================
     Script
     =============================== -->
<script>
function copyCoupon(inputId, btn) {
  const input = document.getElementById(inputId);
  input.select();
  input.setSelectionRange(0, 99999);
  document.execCommand("copy");

  const originalText = btn.innerText;
  btn.innerText = "✔ Copied";
  btn.classList.add("copied");

  setTimeout(() => {
    btn.innerText = originalText;
    btn.classList.remove("copied");
  }, 2000);
}
</script>
