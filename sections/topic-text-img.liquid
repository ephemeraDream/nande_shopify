{% comment %}
------------------------------------------------------------
专题详情页：图文卡片 3‑种尺寸排布
------------------------------------------------------------
{% endcomment %}
{{ 'section-topic-text-img.css' | asset_url | stylesheet_tag }}

<div class="topic-text-img padding-top-30 padding-bottom-120 session-box-padding">
  {% unless section.settings.title == blank %}
    <h2 class="padding-bottom-60 session-box-inner">{{ section.settings.title }}</h2>
  {% endunless %}

  <div class="topic-text-img-grid session-box-inner">
    {%- for block in section.blocks -%}
      {%- assign type = block.settings.box_type -%}
      <div
        class="
          topic-card
          topic-card--{{ type }}
          topic-card--{{ forloop.index0 }}
          {% if block.settings.title_position == 'top' %}
            topic-card--title-top
          {% else %}
            topic-card--title-bottom
          {% endif %}
        "
        {{ block.shopify_attributes }}
      >
        {%- if block.settings.image != blank -%}
          <div class="topic-card__img_content">
            {{-
              block.settings.image
              | image_url: widths: [360, 720, 1080, 1440]
              | image_tag: alt: block.settings.title, class: 'topic-card__img'
            -}}
          </div>
        {%- endif -%}

        {%- unless block.settings.title == blank -%}
          <h4 class="topic-card__title">{{ block.settings.title }}</h4>
        {%- endunless -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Topic Text Img",
  "tag": "section",
  "class": "section",
  "disabled_on": { "groups": ["header", "footer"] },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "select",
          "id": "box_type",
          "label": "Box Type",
          "options": [
            { "value": "box_big",    "label": "Big (wide)"   },
            { "value": "box_middle", "label": "Middle (sq)"  },
            { "value": "box_small",  "label": "Small (sq)"   }
          ],
          "default": "box_big"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "title_position",
          "label": "Title Position",
          "options": [
            { "value": "top",    "label": "Top"    },
            { "value": "bottom", "label": "Bottom" }
          ],
          "default": "top"
        }
      ]
    }
  ],
  "presets": [
    { "name": "Topic Text Img" }
  ]
}
{% endschema %}
