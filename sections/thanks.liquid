
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="section-{{ section.id }}-padding thanks">
  <div class="page-width session-box-padding">
    <div class="thanks_content">
      <h2 class="thanks_text_title">{{ section.settings.title }}</h2>
      <div class="text-body">
        {{ section.settings.text }}
      </div>
      {% if section.settings.btn_text != blank %}
      <a class="nd-btn" href="{{ section.settings.link }}">
          {{ section.settings.btn_text }}
          {{ 'icon-right-arrow.svg' | inline_asset_content }}
      </a>
      {% endif %}
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "thanks",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "Thank you for registering!"
    },
    {
        "type": "richtext",
        "id": "text",
        "label": "text",
        "default": "<p>Your account has been successfully created. You can now enjoy shopping with us.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "button text",
      "default": "Return to Shop"
    },
    {
        "type": "url",
        "id": "link",
        "label": "link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "thanks",
      "blocks": []
    }
  ]
}
{% endschema %}
