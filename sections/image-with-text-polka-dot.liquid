{% comment %} 波点图片带文字 {% endcomment %}
{{ 'section-image-with-text-polka-dot.css' | asset_url | stylesheet_tag }}
<div class="polka_dot_img_with_text {% if section.settings.layout == 'image-right' %} right{% endif %}" id="polka_dot_img_with_text-{{ section.id }}">
    <div class="polka_dot_img_with_text_img">
        {{-
            section.settings.image
            | image_url: width: section.settings.image.width
            | image_tag: alt: section.settings.title
          -}}
        {% for block in section.blocks %}
        {%- if block.type == 'product_item' -%}
            <div
              class="polka_dot_contain"
              style="top: {{ block.settings.product_Y }}%;left: {{ block.settings.product_X }}%"
            >
              <div class="polka_dot_icon">{{- 'icon-plus.svg' | inline_asset_content -}}</div>
              <a class="polka_dot_product {% if block.settings.product_X > 60 %} left{% endif %}" href="{{ block.settings.select_product.url }}" style="display: none;">
                <div class="polka_dot_product_img">
                  {{-
                    block.settings.select_product.featured_media
                    | image_url: width: block.settings.select_product.featured_media.width
                    | image_tag: alt: block.settings.select_product.title
                  -}}
                </div>
                <div class="polka_dot_product_info">
                  <h4 class="polka_dot_product_info_title truncate-2-lines">
                    {{ block.settings.select_product.metafields.custom.product_model | default: block.settings.select_product.title }}
                  </h4>
                  <div class="polka_dot_product_info_price text-body">
                    {{ block.settings.select_product.price | money_without_trailing_zeros }}
                    {{- 'icon-shopping-cart.svg' | inline_asset_content -}}
                  </div>
                </div>
              </a>
            </div>
        {%- endif -%}
        {% endfor %}
    </div>
    <div class="polka_dot_img_with_text_text">
        <h4 class="polka_dot_img_with_text_text_small_title">{{ section.settings.small_title }}</h4>
        <h2 class="polka_dot_img_with_text_text_title">{{ section.settings.title }}</h2>
        <div class="text-body">{{ section.settings.text }}</div>
        {% if section.settings.btn_text != blank %}
        <a class="nd-btn" href="{{ section.settings.link }}">
            {{ section.settings.btn_text }}
            {{ 'icon-right-arrow.svg' | inline_asset_content }}
        </a>
        {% endif %}
    </div>
</div>

{% schema %}
{
  "name": "image with text polka dot",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "image-left",
            "label": "Image Left, Text Right"
          },
          {
            "value": "image-right",
            "label": "Text Left, Image Right"
          }
        ],
        "default": "image-left"
    },
    {
        "type": "text",
        "id": "small_title",
        "label": "small_title"
    },
    {
        "type": "text",
        "id": "title",
        "label": "title"
    },
    {
        "type": "richtext",
        "id": "text",
        "label": "text"
    },
    {
        "type": "text",
        "id": "btn_text",
        "label": "button text"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "image"
    },
    {
        "type": "url",
        "id": "link",
        "label": "link"
    }
  ],
  "blocks": [
    {
        "type": "product_item",
        "name": "产品选择",
        "settings": [
        {
            "type": "product",
            "id": "select_product",
            "label": "选择产品"
        },
        {
            "type": "range",
            "id": "product_X",
            "label": "X坐标",
            "default": 0,
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%"
        },
        {
            "type": "range",
            "id": "product_Y",
            "label": "Y坐标",
            "default": 0,
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%"
        }
        ]
    }
    ]
}
{% endschema %}
<script>
  (() => {
  const sectionId = '{{ section.id }}';
  
    document.addEventListener('DOMContentLoaded', () => {
      const sectionEl = document.getElementById('polka_dot_img_with_text-' + sectionId);
      const icons = sectionEl.querySelectorAll('.polka_dot_contain .polka_dot_icon');

      icons.forEach(icon => {
        const contain = icon.closest('.polka_dot_contain');
        const product = contain.querySelector('.polka_dot_product');
    
        icon.addEventListener('click', () => {
          event.stopPropagation();
          const wasNone = product && getComputedStyle(product).display === 'none';
          sectionEl.querySelectorAll('.polka_dot_product').forEach(el => {
            el.style.display = 'none';
          });
    
          if (wasNone && product) {
            product.style.display = '';
          }
        });
      });
    
      // 点击模块图片区域，隐藏当前模块所有产品详情
      const imgBox = sectionEl.querySelector('.polka_dot_img_with_text_img');
      if (imgBox) {
        imgBox.addEventListener('click', (event) => {
          // 如果点击的是波点图标或者波点图标内部元素，阻止隐藏
          if (event.target.closest('.polka_dot_icon')) {
            return; // 直接返回，不隐藏
          }

          // 否则隐藏所有产品详情
          sectionEl.querySelectorAll('.polka_dot_product').forEach(el => {
            el.style.display = 'none';
          });
        });
      }
    
    });
  })();
</script>

    
