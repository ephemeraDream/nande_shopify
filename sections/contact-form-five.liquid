{% comment %}
------------------------------------------------------------
Contact Form Five Section - 多功能联系表单
支持4种样式切换和自定义字段
------------------------------------------------------------
{% endcomment %}

<div class="contact-form-five session-box-padding overflow-hidden {{ section.settings.style }}" 
style="background-image: url('{{ section.settings.image | image_url: width: section.settings.image.width }}'); "
aria-label="contact"
>
    <div class="contact-form-five__content session-box-inner">
        {% if section.settings.style == 'style1' %}
            <!-- 样式1：类似contact-form-one，全屏背景 -->
            <div class="form__content">
                <h2 class="one__title">{{ section.settings.title }}</h2>
                <h4 class="one__desc">{{ section.settings.desc }}</h4>
                {%- form 'contact', id: 'ContactFormFive' -%}
                    {%- render 'contact-form-fields', form: form, section: section -%}
                {%- endform -%}
            </div>
        {% elsif section.settings.style == 'style2' %}
            <!-- 样式2：类似contact-form-two，左右布局 -->
            <div class="form_left">
                <h2 class="padding-bottom-30">{{ section.settings.title }}</h2>
                <h4 class="">{{ section.settings.desc }}</h4>
                <div class="text-body">{{ section.settings.text_content }}</div>
            </div>
            <div class="form__content">
                {%- form 'contact', id: 'ContactFormFive' -%}
                    {%- render 'contact-form-fields', form: form, section: section -%}
                {%- endform -%}
            </div>
        {% elsif section.settings.style == 'style3' %}
            <!-- 样式3：类似contact-form-three，浅色背景 -->
            <div class="form_left">
                <h2 class="padding-bottom-30">{{ section.settings.title }}</h2>
                <h4 class="">{{ section.settings.desc }}</h4>
                <div class="text-body">{{ section.settings.text_content }}</div>
            </div>
            <div class="form__content">
                {%- form 'contact', id: 'ContactFormFive' -%}
                    {%- render 'contact-form-fields', form: form, section: section -%}
                {%- endform -%}
            </div>
        {% elsif section.settings.style == 'style4' %}
            <!-- 样式4：类似contact-form-four，简化版 -->
            <div class="form__content">
                {% unless section.settings.title == blank %}
                    <h2 class="one__title">{{ section.settings.title }}</h2>
                {% endunless %}
                {% unless section.settings.desc == blank %}
                    <h4 class="one__desc">{{ section.settings.desc }}</h4>
                {% endunless %}
                {%- form 'contact', id: 'ContactFormFive' -%}
                    {%- render 'contact-form-fields', form: form, section: section -%}
                {%- endform -%}
            </div>
        {% endif %}
    </div>
</div>

<style>
  /* 基础样式 */
  .contact-form-five {
    background-size: cover; 
    background-position: center;
    display: flex;
    align-items: center;
    position: relative;
  }

  .contact-form-five__content {
    display: flex;
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .contact-form-five .form__content {
    display: flex;
    gap: 3rem;
    flex-direction: column;
  }

  .contact-form-five .form_left {
    display: flex;
    flex-direction: column;
  }

  .contact-form-five .text-body {
    margin-top: 1.5rem;
  }

  .contact-form-five .text-body ul {
    list-style: none;
    padding-left: 0;
    margin-left: 0;
  }

  .contact-form-five .text-body ul li {
    position: relative;
    padding-left: 16px; 
    margin-bottom: 6px;
    font-size: 2.4rem;
    font-weight: 300;
    line-height: 4rem;
    color: #1F1F1F;
  }

  .contact-form-five .text-body ul li::before {
    content: '';
    position: absolute;
    top: 0.8em; 
    left: 0;
    width: 4px;
    height: 4px;
    background-color: #1F1F1F;
    border-radius: 50%;
  }

  .contact-form-five .form-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 15px;
  }

  .contact-form-five .form-grid-field {
    flex: 1 1 calc(50% - 8px);
  }

  .contact-form-five .form-grid-field.all-row {
    flex: 1 1 100%;
  }

  .contact-form-five .field__input,
  .contact-form-five textarea.text-area {
    width: 100%;
    padding: 10px 12px;
    font-size: 2.2rem;
    border: none;
    border-radius: 0px;
    background: #fff;
    color: rgb(var(--color-foreground));
    font-weight: 400;
    line-height: 1.1em;
  }

  .contact-form-five .field__input {
    height: 4.6rem;
  }

  .contact-form-five select.field__input {
    appearance: none;
    background-image: url("data:image/svg+xml,%3Csvg width='10' height='6' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 0l5 6 5-6z' fill='%237F7E75'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right 12px center;
    background-size: 10px 6px;
  }

  .contact-form-five select.field__input option[disabled],
  .contact-form-five select.field__input:invalid {
    color: #7F7E75; 
  }

  .contact-form-five .field__input::placeholder,
  .contact-form-five textarea.text-area::placeholder {
    color: #7F7E75;  
    opacity: 1;
    font-size: 2.2rem;
    font-weight: 400;
  }

  .contact-form-five textarea.text-area {
    min-height: 120px;
    resize: vertical;
    margin-bottom: 15px;
  }

  .contact-form-five .submit-button {
    border: none;
    padding: 1.4rem;
    height: auto;
    width: 50%;
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
  }

  .contact-form-five .form__message.success {
    color: #00ff66;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .contact-form-five .form__message.error {
    color: #ff4d4f;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .contact-form-five .contact__field-error {
    color: #ff4d4f;
    font-size: 13px;
    margin-top: 4px;
    display: block;
  }

  /* 样式1：全屏背景样式 */
  .contact-form-five.style1:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(269deg, #000000 50%, rgba(255, 255, 255, 0) 98%);
    opacity: 0.4;
  }

  .contact-form-five.style1 {
    min-height: calc(100vh - 170px);
    justify-content: flex-end;
  }

  .contact-form-five.style1 .contact-form-five__content {
    justify-content: flex-end;
    align-items: flex-end;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  .contact-form-five.style1 .form__content {
    width: 72rem;
  }

  .contact-form-five.style1 .one__title,
  .contact-form-five.style1 .one__desc {
    color: #fff;
  }

  /* 样式2：左右布局，深色表单 */
  .contact-form-five.style2 {
    padding-top: 12rem;
    padding-bottom: 12rem;
    background-color: transparent;
  }

  .contact-form-five.style2 .contact-form-five__content {
    flex-direction: row;
    justify-content: space-between;
    gap: 5rem;
  }

  .contact-form-five.style2 .form_left {
    width: 50%;
  }

  .contact-form-five.style2 .form__content {
    width: 66rem;
    padding: 4rem 5rem;
    background-color: #1F1F1F;
  }

  .contact-form-five.style2 .form-grid {
    flex-direction: column;
  }

  .contact-form-five.style2 .form-grid-field {
    margin-bottom: 15px;
  }

  /* 样式3：左右布局，浅色表单 */
  .contact-form-five.style3 {
    padding-top: 12rem;
    padding-bottom: 12rem;
    background-color: transparent;
  }

  .contact-form-five.style3 .contact-form-five__content {
    flex-direction: row;
    justify-content: space-between;
    gap: 5rem;
  }

  .contact-form-five.style3 .form_left {
    width: 35%;
  }

  .contact-form-five.style3 .form__content {
    width: 72rem;
    padding: 3.2rem 3.1rem;
    background-color: #E2DED6;
  }

  /* 样式4：简化版，全屏背景 */
  .contact-form-five.style4:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(269deg, #000000 50%, rgba(255, 255, 255, 0) 98%);
    opacity: 0.4;
  }

  .contact-form-five.style4 {
    min-height: calc(100vh - 170px);
    justify-content: flex-end;
  }

  .contact-form-five.style4 .contact-form-five__content {
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  .contact-form-five.style4 .form__content {
    width: 72rem;
  }

  .contact-form-five.style4 .one__title,
  .contact-form-five.style4 .one__desc {
    color: #fff;
  }

  /* 移动端响应式 */
  @media only screen and (max-width: 767px) {
    .contact-form-five .form__content {
      width: 100%;
    }

    .contact-form-five .field__input,
    .contact-form-five textarea.text-area,
    .contact-form-five .field__input::placeholder,
    .contact-form-five textarea.text-area::placeholder {
      font-size: 1.8rem;
    }

    .contact-form-five .form-grid .form-grid-field {
      flex: 1 1 calc(100%);
    }

    .contact-form-five.style2 .contact-form-five__content,
    .contact-form-five.style3 .contact-form-five__content {
      flex-direction: column;
    }

    .contact-form-five.style2 .form_left,
    .contact-form-five.style3 .form_left {
      width: 100%;
    }

    .contact-form-five.style2 .form__content,
    .contact-form-five.style3 .form__content {
      width: 100%;
      padding: 2rem;
    }

    .contact-form-five.style1 .contact-form-five__content,
    .contact-form-five.style4 .contact-form-five__content {
      padding-top: 5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Contact Form Five",
  "tag": "section",
  "class": "section",
  "disabled_on": { "groups": ["header", "footer"] },
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "表单样式",
      "options": [
        {
          "value": "style1",
          "label": "样式1 - 全屏背景（类似Contact Form One）"
        },
        {
          "value": "style2",
          "label": "样式2 - 左右布局深色（类似Contact Form Two）"
        },
        {
          "value": "style3",
          "label": "样式3 - 左右布局浅色（类似Contact Form Three）"
        },
        {
          "value": "style4",
          "label": "样式4 - 简化版（类似Contact Form Four）"
        }
      ],
      "default": "style1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "背景图片"
    },
    {
      "type": "text",
      "id": "desc",
      "label": "描述"
    },
    {
      "type": "richtext",
      "id": "text_content",
      "label": "文本内容（样式2和3使用）"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "按钮文字",
      "default": "Submit"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "成功消息",
      "default": "Your message has been sent successfully."
    },
    {
      "type": "text",
      "id": "error_message",
      "label": "错误消息",
      "default": "There was an error sending the form. Please check your input."
    },
    {
      "type": "header",
      "content": "表单字段设置"
    },
    {
      "type": "checkbox",
      "id": "show_email",
      "label": "显示邮箱字段",
      "default": true
    },
    {
      "type": "text",
      "id": "mail_placeholder",
      "label": "邮箱占位符",
      "default": "Email*"
    },
    {
      "type": "checkbox",
      "id": "show_company",
      "label": "显示公司名称字段",
      "default": true
    },
    {
      "type": "text",
      "id": "company_placeholder",
      "label": "公司名称占位符",
      "default": "Company Name"
    },
    {
      "type": "checkbox",
      "id": "show_name",
      "label": "显示姓名字段",
      "default": true
    },
    {
      "type": "text",
      "id": "name_placeholder",
      "label": "姓名占位符",
      "default": "Name"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "显示电话字段",
      "default": false
    },
    {
      "type": "text",
      "id": "phone_placeholder",
      "label": "电话占位符",
      "default": "Phone"
    },
    {
      "type": "checkbox",
      "id": "show_message",
      "label": "显示消息字段",
      "default": true
    },
    {
      "type": "text",
      "id": "message_placeholder",
      "label": "消息占位符",
