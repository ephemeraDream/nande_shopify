    }
  ],
  "blocks": [
    {
      "type": "custom_field",
      "name": "自定义字段",
      "settings": [
        {
          "type": "text",
          "id": "field_name",
          "label": "字段名称（用于表单提交）",
          "info": "例如：custom_field_1"
        },
        {
          "type": "select",
          "id": "field_type",
          "label": "字段类型",
          "options": [
            {
              "value": "text",
              "label": "文本输入框"
            },
            {
              "value": "email",
              "label": "邮箱输入框"
            },
            {
              "value": "tel",
              "label": "电话输入框"
            },
            {
              "value": "number",
              "label": "数字输入框"
            },
            {
              "value": "url",
              "label": "网址输入框"
            },
            {
              "value": "textarea",
              "label": "多行文本框"
            }
          ],
          "default": "text"
        },
        {
          "type": "text",
          "id": "placeholder",
          "label": "占位符文字"
        },
        {
          "type": "checkbox",
          "id": "required",
          "label": "是否为必填项",
          "default": false
        },
        {
          "type": "number",
          "id": "rows",
          "label": "多行文本框行数（仅多行文本框使用）",
          "default": 4,
          "info": "仅当字段类型为多行文本框时有效"
        }
      ]
    },
    {
      "type": "dropdown",
      "name": "下拉菜单",
      "settings": [
        {
          "type": "text",
          "id": "key",
          "label": "唯一标识"
        },
        {
          "type": "text",
          "id": "label",
          "label": "占位提示"
        },
        {
          "type": "text",
          "id": "field_name",
          "label": "字段名称"
        },
        {
          "type": "checkbox",
          "id": "required",
          "label": "是否为必填项",
          "default": false
        }
      ]
    },
    {
      "type": "group",
      "name": "选项分组",
      "settings": [
        {
          "type": "text",
          "id": "dropdown_key",
          "label": "归属下拉菜单标识"
        },
        {
          "type": "text",
          "id": "label",
          "label": "分组名称"
        },
        {
          "type": "text",
          "id": "key",
          "label": "分组唯一标识"
        }
      ]
    },
    {
      "type": "option",
      "name": "选项",
      "settings": [
        {
          "type": "text",
          "id": "group_key",
          "label": "归属分组标识"
        },
        {
          "type": "text",
          "id": "label",
          "label": "显示文字"
        },
        {
          "type": "text",
          "id": "value",
          "label": "提交值"
        }
      ]
    }
  ],
  "presets": [
    { "name": "Contact Form Five" }
  ]
}
