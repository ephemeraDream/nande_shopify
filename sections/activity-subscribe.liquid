        {
          "type": "textarea",
          "id": "icon",
          "label": "icon"
        }
      ]
    },
    {
      "type": "top-right",
      "name": "top right",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "text"
        },
        {
          "type": "textarea",
          "id": "icon",
          "label": "icon"
        }
      ]
    },
    {
      "type": "bottom",
      "name": "bottom",
      "settings": [
        {
          "type": "image_picker",
