{% layout 'gift_card' %}

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Ihr Geschenkgutschein</title>
</head>

<body style="margin: 0; background-color: #ffffff;">
  <div class="gift-card-container" style="text-align: center; padding: 40px 20px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;">
    
    <!-- 1. Bildbereich (Zentriert und Größe begrenzt) -->
    <div style="margin-bottom: 30px;">
      {% if section.settings.image == blank %}
        <img 
          src="{{ 'gift-card/card.svg' | shopify_asset_url }}" 
          loading="lazy" 
          alt="Geschenkgutschein" 
          style="max-width: 500px; width: 100%; height: auto; border-radius: 12px; display: block; margin: 0 auto; box-shadow: 0 4px 15px rgba(0,0,0,0.1);"
        >
      {% else %}
        <img 
          src="{{ section.settings.image | image_url: width: 800 }}" 
          loading="lazy" 
          alt="Geschenkgutschein" 
          style="max-width: 500px; width: 100%; height: auto; border-radius: 12px; display: block; margin: 0 auto; box-shadow: 0 4px 15px rgba(0,0,0,0.1);"
        >
      {% endif %}
    </div>

    <!-- 2. QR-Code -->
    <div class="gift-card__qr-code" data-identifier="{{ gift_card.qr_identifier }}" style="margin: 20px auto; display: flex; justify-content: center;"></div>

    <!-- 3. Gutscheincode-Bereich -->
    <div class="gift-card__info" style="margin-top: 10px;">
      <h2 style="color: #333; font-weight: 500;">Ihr Geschenkgutschein-Code</h2>
      
      <!-- Hier wird der Code angezeigt -->
      <div style="background: #f8f8f8; padding: 18px; border: 2px dashed #bbbbbb; display: inline-block; font-size: 24px; font-weight: bold; letter-spacing: 3px; color: #000; margin: 15px 0; border-radius: 8px; min-width: 300px;">
        {{ gift_card.code | format_code }}
      </div>

      {%- if gift_card.pass_url -%}
        <div style="margin-top: 15px;">
          <a href="{{ gift_card.pass_url }}">
            <img src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}" loading="eager" width="120" height="40" alt="Zu Apple Wallet hinzufügen">
          </a>
        </div>
      {%- endif -%}
    </div>

    <!-- 4. Buttons (Gleiche Breite, Zentriert, Deutsch) -->
    <div class="gift-card__btns" style="margin-top: 40px; display: flex; flex-wrap: wrap; justify-content: center; gap: 15px;">
      
      <!-- Button: Weiter einkaufen -->
      <a class="btn" href="{{ shop.url }}" target="_blank" rel="noopener" 
         style="display: inline-block; padding: 14px 0; background: #000; color: #fff; text-decoration: none; border-radius: 6px; min-width: 220px; font-weight: bold; text-align: center;">
        Weiter einkaufen
      </a>

      <!-- Button: Gutschein drucken -->
      <button class="btn" onclick="window.print();" 
         style="display: inline-block; padding: 14px 0; background: #ffffff; color: #000; border: 1px solid #000; border-radius: 6px; cursor: pointer; min-width: 220px; font-weight: bold; font-family: inherit; font-size: 16px; text-align: center;">
        Gutschein drucken
      </button>
      
    </div>
  </div>

  <!-- QR Code Generator Script -->
  <script src="{{ 'vendor/qrcode.js' | shopify_asset_url }}" defer></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof QRCode !== 'undefined') {
        new QRCode( document.querySelector('.gift-card__qr-code'), {
          text: document.querySelector('.gift-card__qr-code').dataset.identifier,
          width: 120,
          height: 120
        });
      }
    });
  </script>
</body>
</html>
